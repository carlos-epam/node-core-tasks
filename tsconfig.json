{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./types.d.ts"]
    },
    "include": [
      "src/**/*",
      "src/**/*.ts",
      "types.d.ts"
    ],
    "exclude": ["node_modules"]
  }